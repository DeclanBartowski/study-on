{% extends 'base.html.twig' %}

{% block title %}Урок "{{ lesson.name }}"{% endblock %}

{% block body %}
    <div class="container">
        <p class="h1">Урок "{{ lesson.name }}"</p>
        <p class="lead text-body-secondary">Курс <a href="{{ path('app_course_show', {'id': course.id}) }}">{{ course.name }}</a></p>

        <div class="p-4 p-md-5 mb-4 rounded text-body-emphasis bg-body-secondary">
            <div class="px-0">
                <p class="display-4 h2">Описание урока</p>
                <p class="lead my-3">{{ lesson.content ?: ''}}</p>
            </div>
        </div>

        <div class="bd-example-snippet bd-code-snippet">
            <a class="btn btn-secondary" href="{{ path('app_lesson_edit', {'id': lesson.id}) }}">Редактировать</a>

            {{ include('lesson/_delete_form.html.twig') }}
        </div>
        <hr class="my-4">
        <a class="btn btn-secondary" href="{{ path('app_lesson_index') }}">Вернуться к списку</a>
    </div>
{% endblock %}
