{% extends 'base.html.twig' %}

{% block title %}Урок "{{ lesson.name }}"{% endblock %}

{% block body %}
    <h1>Урок "{{ lesson.name }}"</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Название</th>
                <td>{{ lesson.name }}</td>
            </tr>
            <tr>
                <th>Курс</th>
                <td>{{ course.name }}</td>
            </tr>
            <tr>
                <th>Описание урока</th>
                <td>{{ lesson.content ?: ''}}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_lesson_index') }}">Вернуться к списку</a>

    <a href="{{ path('app_lesson_edit', {'id': lesson.id}) }}">Изменить</a>

    {{ include('lesson/_delete_form.html.twig') }}
{% endblock %}
