{% extends 'base.html.twig' %}

{% block title %}Курсы{% endblock %}

{% block body %}
    <h1>Курсы</h1>

    <table class="table">
        <tbody>
        {% for course in courses %}
            <tr>
                <td>
                    <a href="{{ path('app_course_show', {'id': course.id}) }}">{{ course.name }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
    <a href="{{ path('app_course_new') }}">Добавить новый курс</a>
{% endblock %}
